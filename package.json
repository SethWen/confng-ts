{
  "name": "confng-ts",
  "version": "1.0.0",
  "description": "Next generation configuration management tool for Node.js",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "type": "module",
  "scripts": {
    "prepare": "git config core.hooksPath .githook",
    "check": "biome check",
    "fix": "biome check --write",
    "test": "vitest --run src",
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepack": "tsup",
    "prepublish": "tsup"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README*.md", "LICENSE", "package.json"],
  "keywords": [
    "simple",
    "configuration",
    "merge environment",
    "node.js",
    "typescript"
  ],
  "author": "Shawn Wen",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SethWen/confng-ts.git"
  },
  "bugs": {
    "url": "https://github.com/SethWen/confng-ts/issues"
  },
  "homepage": "https://github.com/SethWen/confng-ts#readme",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.15.21",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "dependencies": {
    "snakify-ts": "^2.3.0"
  }
}
